.cu-bar{
  display:flex;
  position:relative;
  align-items:center;
  min-height:100rpx;
  justify-content:space-between;
  background-color:white;

}
.cu-bar.foot{
  position:fixed;
  width:100%;
  bottom:0;
  z-index:1024;
  box-shadow:0 -1rpx 6rpx rgba(0, 0, 0, 0.1);
}
.cu-bar .action{
  display:flex;
  align-items:center;
  height:100%;
  justify-content:center;
  max-width:100%;
}
.cu-bar.tabbar .action{
  font-size:22rpx;
  position:relative;
  flex:1;
  text-align:center;
  padding:0;
  display:block;
  height:auto;
  line-height:1;
  margin:0;
  overflow:initial;
}
.cu-bar.tabbar .action .cuIcon-cu-image{
  margin:0 auto;
}
.cu-bar.tabbar .action .cuIcon-cu-image image{
  width:50rpx;
  height:50rpx;
  display:inline-block;
}
.text-gray{
  color: gray;
}
.text-green{
  color: #39b54a;
}

.cu-tag.badge{
  border-radius:50%;
  position:absolute;
  top:-5rpx;
  right:50%;
  transform: translateX(100%);
  font-size:20rpx;
  height:30rpx;
  width: 30rpx;
  color:white;
  background-color:rgb(255, 65, 17);
  text-align: center;
  line-height: 30rpx;
}

